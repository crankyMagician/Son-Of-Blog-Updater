<!DOCTYPE html>
<html lang="en">
    
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SonOfBlogUpdater</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />   
    @*Added For Ease of use in whole application*@
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</head>

<body>

    <header>
    <nav class="navbar navbar-expand-md navbar-light  fixed-top  cool-nav" style="background-color: #F34C19; font-family: Roboto">
        <div class="container-fluid">
            <a class="navbar-brand " style="color: #343F71;" asp-area="" asp-controller="Home" asp-action="Index">SonOfBlogUpdater</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1" style="color: #E9D8E4;">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                  
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Author" asp-action="Index">Authors</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="BlogPostEdit" asp-action="Index">Blog Posts</a>
                    </li>
                     <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="MetaTags" asp-action="Index">Meta Tags</a>
                    </li>
                    
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SeoExplanation">Explanation</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
    </nav>
</header>

    <div class="py-5" style="background-color: #343F71;">
        <main role="main">
            @RenderBody()
        </main>
    </div>
  




 <footer class="border-top footer sticky-bottom text-muted" style="background-color: #343F71; font-family: Roboto; color: #E9D8E4;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                &copy; 2023 - SonOfBlogUpdater - <a asp-area="" asp-controller="Home" asp-action="Privacy" style="color: #E9D8E4">Privacy</a>
            </div>
            <div class="col-md-6 text-md-right">
                <a href="@Url.Action("SeoExplanation", "Home")" class="animated-footer-link mr-3" style="color: #E9D8E4">Learn more about SEO</a>  
                <a href="#" class="animated-footer-link" style="color: #E9D8E4">Back To Top</a>
            </div>
        </div>
    </div>
</footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
