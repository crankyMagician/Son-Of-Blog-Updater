@model SonOfBlogUpdater.Models.BlogPost

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <h2 class="text-center mb-4">Delete Blog Post</h2>
    <p>Are you sure you want to delete this blog post?</p>
    <form asp-controller="BlogPostEdit" asp-action="Delete" method="post">
        <div class="card animated-card text-white  text-center bg-secondary p-3 mb-3">
          <div class="form-group">
            <label asp-for="Title" class="text-center h2"></label>
            <input asp-for="Title" class="form-control bg-light text-dark" disabled="disabled" />
          </div>
        </div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
