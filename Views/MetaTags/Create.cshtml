@model SonOfBlogUpdater.Models.MetaTag

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
   <div class="card animated-card jumbotron text-center" style="background-color: #FBC40E; color: #343F71;">
      <h4 class="text-center mb-4">Create New Meta Tag</h4>


        <div class="row d-flex justify-content-center">
            <div class="col-md-4">
                <form method="post" asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mx-auto">
                       
                        <input type="text" name="TagName" class="form-control bg-light text-dark" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary animated-button" onclick="console.log('Create button clicked')" />
                    </div>
                </form>

                @*<input type="hidden" asp-for="Id" value="@(Model.Id == 0 ? ViewBag.MetaTags.Length : Model.Id)" />*@


            </div>
        </div>

        <div>
            <a asp-action="Index" class="btn btn-secondary animated-button">Back to List</a>
        </div>


    </div>

</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
