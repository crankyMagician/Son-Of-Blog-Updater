@model SonOfBlogUpdater.Models.Author

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container py-5">

     <div class="card animated-card text-white  text-center bg-secondary p-3 mb-3">
        <h4 class="text-center mb-4"> Edit Author</h4>

        <div class="row row d-flex justify-content-center">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group mx-auto">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control bg-light text-dark" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mx-auto">
                        <label asp-for="Bio" class="control-label"></label>
                          <textarea asp-for="Bio" class="form-control"></textarea>
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>
              
                    <div class="form-group mx-auto">
                        <input type="submit" value="Save" class="btn btn-primary animated-button" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="btn btn-secondary animated-button">Back to List</a>
        </div>
      </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
