@model SonOfBlogUpdater.Models.Author

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container py-5">

     <div class="card animated-card text-white  text-center bg-secondary p-3 mb-3">
            
            <h3 class="text-center mb-4">Are you sure you want to delete this Author?</h3>
            <div>
        
                <dl class="row d-flex justify-content-center">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Name)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Bio)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Bio)
                    </dd>
               
                </dl>
    
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn animated-button btn-danger" /> 
                    <a asp-action="Index" class="btn custom-button animated-button">Back to List</a>
                </form>
            </div>

     </div>
</div>